class Calculator {
         public int number1;
         public int number2;
         public int number3;
         Calculator(int number1,int number2,int number3)
         {
             this.number1=number1;
          this.number2=number2;
           this.number3=number3;
         }
        public double findAverage(int number1,int number2,int number3)
         {
             return (double)(number1+number2+number3)/3.0;
         }
	// Implement your code here
}

class Tester {

	public static void main(String args[]) {
	    
		Calculator calculator = new Calculator(12,8,15);
           System.out.println(String.format("%.2f",calculator.findAverage(12,8,15)));
		// Invoke the method findAverage of the Calculator class and display the average
	}
}
